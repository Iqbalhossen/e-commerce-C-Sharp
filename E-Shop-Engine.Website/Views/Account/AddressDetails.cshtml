@model E_Shop_Engine.Website.Models.AddressViewModel

<div>
    <div class="input-group mb-3 my-3 mx-2 d-flex justify-content-around">
        @Html.ActionLink("Edit", "AddressEdit", "Account", null, new { @class = "btn btn-primary" })
        </div>
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Street)</dt>
            <dd>@Html.DisplayFor(model => model.Street)</dd>

            <dt>@Html.DisplayNameFor(model => model.Line1) / @Html.DisplayNameFor(model => model.Line2)</dt>
            <dd>@Html.DisplayFor(model => model.Line1) / @Html.DisplayFor(model => model.Line2)</dd>

            <dt>@Html.DisplayNameFor(model => model.ZipCode) and @Html.DisplayNameFor(model => model.City)</dt>
            <dd>@Html.DisplayFor(model => model.ZipCode) @Html.DisplayFor(model => model.City)</dd>

            <dt>@Html.DisplayNameFor(model => model.State)</dt>
            <dd>@Html.DisplayFor(model => model.State)</dd>

            <dt>@Html.DisplayNameFor(model => model.Country)</dt>
            <dd>@Html.DisplayFor(model => model.Country)</dd>
        </dl>
    </div>
