@model E_Shop_Engine.Website.Areas.Admin.Models.CategoryAdminViewModel

@{
    ViewBag.Title = "Details " + Model.Name;
}

<h1>Details @Model.Name</h1>

<p>
    @Html.ActionLink("Go Back", "GoBack", "Home", new { area = "" }, new { @class = "btn btn-primary text-white" })
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-secondary" })
</p>

<div class="row text-center">
    <dl class="col-12">
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.Description)</dt>
        <dd>@Html.DisplayFor(model => model.Description)</dd>
    </dl>
</div>

<nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <a class="nav-item nav-link active" id="nav-products-tab" data-toggle="tab" href="#nav-products" role="tab" aria-controls="nav-products" aria-selected="true">Products</a>
        <a class="nav-item nav-link" id="nav-subcategories-tab" data-toggle="tab" href="#nav-subcategories" role="tab" aria-controls="nav-subcategories" aria-selected="false">Subcategories</a>
    </div>
</nav>
<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-products" role="tabpanel" aria-labelledby="nav-products-tab">
        <div class=" table-responsive">
            <table class="table table-striped table-hover table-light text-center">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">Catalog Number</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <th scope="row">@item.CatalogNumber</th>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>
                                @Html.ActionLink("Details", "Details", "ProductAdmin", new { id = item.ID }, new { @class = "btn btn-info btn-sm mb-1" })
                                @Html.ActionLink("Edit", "Edit", "ProductAdmin", new { id = item.ID }, new { @class = "btn btn-primary btn-sm mb-1" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    <div class="tab-pane fade" id="nav-subcategories" role="tabpanel" aria-labelledby="nav-subcategories-tab">
        <div class=" table-responsive">
            <table class="table table-striped table-hover table-light text-center">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Subcategories)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>
                                @Html.ActionLink("Details", "Details", "SubcategoryAdmin", new { id = item.ID }, new { @class = "btn btn-info btn-sm mb-1" })
                                @Html.ActionLink("Edit", "Edit", "SubcategoryAdmin", new { id = item.ID }, new { @class = "btn btn-primary btn-sm mb-1" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
</div>